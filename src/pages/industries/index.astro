---
import { getCollection } from "astro:content";
import BaseLayout from '../../layouts/BaseLayout.astro';
// import ProjectPost from '../../components/ProjectPost.astro';

// import Form from '../../components/Form.astro';
// import FeedbackForm from "../../components/FeedbackForm"



// const allProjects = await Astro.glob('../projects/*.md');
const allProjects = await getCollection("projects");
// const tags = ['astro', 'blogging', 'learning in public', 'successes', 'setbacks', 'community']
// const tags = [...new Set(allProjects.map((project) => project.frontmatter.tags).flat())];
const industries = [...new Set(allProjects.map((project) => project.data.industries).flat())];

const uniqueID = "industry-index";
const pageTitle = "Industry Index";
const metaTitle = "meta title tbc";
const metaDescription = "meta description tbc";
const pageHead = "Industry Index";
const pageDesc = "A list of industry projects";
const pageContent = "Select an industry to view all projects with that industry type.";

---

<BaseLayout
	uniqueID={uniqueID}
	pageTitle={pageTitle} 
	metaTitle={metaTitle} 
	metaDescription={metaDescription}
	pageHead={pageHead} 
	pageDesc={pageDesc}
	pageContent={pageContent}
>

    <section>
		<div class="content">

            <div class="industry-tag">
                {industries.map((industry) => (
                    <p class="industry-tag"><a href={`/industry/${industry}`}>{industry}</a></p>
                ))}
            </div>

        </div>

		<div class="contact">
            <!-- <FeedbackForm client:load /> -->
			<!-- <ContactCTA /> -->
		</div>

	</section>

</BaseLayout>

