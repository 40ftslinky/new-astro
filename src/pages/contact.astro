const pageDesc = "Contact us. Fill in the form below and we'll get back to you as soon as possible.";
const pageContent = "Contact page content tbc";

// component imports
import Form from '../components/Form.astro';


---

<BaseLayout
	uniqueID={uniqueID} 
	pageTitle={pageTitle} 
	metaTitle={metaTitle} 
	metaDescription={metaDescription}
	pageHead={pageHead}
	pageDesc={pageDesc}
	pageContent={pageContent}
