---

interface Props {
    pageHead: string;
    image: {
        url: string;
    }
}

const { pageHead, image } = Astro.props;

---

<div id="hero_container">
	<!-- <img id="background" src={background.src} alt="" fetchpriority="high" /> -->
	<div id="hero" 
         alt={pageHead}
        fetchpriority="high">
		
		
			<h1 style="font-size: 2.5rem;">{pageHead}</h1>
            

		</section>
	</div>

</div>

<style>
	#hero_container {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		height: calc(var(--body-height) / 2);
	}

	#hero {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		text-align: center;
        background-image: url({image.url});
	}

	#hero h1 {
		font-size: 2.5rem;
	}

	#hero p {
		font-size: 1.5rem;
	}

	#hero img {
		width: 100%;
		height: auto;
	}
	
</style>
